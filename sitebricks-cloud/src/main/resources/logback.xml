<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss} %-10logger | %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.eclipse.jetty" level="OFF"/>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>